<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/form.css" />
    <title>Document</title>
  </head>
  <body>
    <div class="container">
      <h2><%= button %> portofolio</h2>
      <form action="<%= action %>" method="POST" class="mt-3">
        <div class="pd-name">
          <label class="form-label">Activity Name</label>
          <input
            type="text"
            name="nama_kegiatan"
            class="form-control"
            value="<%= portofolio.nama_kegiatan%>"
            required
          />
        </div>
        <div class="pd-price">
          <label class="form-label">Activity Time</label>
          <input
            type="date"
            name="waktu_kegiatan"
            class="form-control"
            value="<%= portofolio.waktu_kegiatan%>"
            required
          />
        </div>
        <div class="btn-container">
          <button type="submit" class="btn btn-submit"><%= button %></button>
          <a href="/page" class="btn btn-cancel">Cancel</a>
        </div>
      </form>
    </div>
    <script>
      const symbols = ["●", "■", "△", "✖"];
      const count = 120;

      for (let i = 0; i < count; i++) {
        const particle = document.createElement("div");
        particle.className = "particle";
        particle.innerText =
          symbols[Math.floor(Math.random() * symbols.length)];
        particle.style.left = Math.random() * 97 + "vw";
        particle.style.top = Math.random() * 95 + "vh";
        particle.style.fontSize = Math.random() * 16 + 8 + "px";
        particle.style.animationDuration = Math.random() * 5 + 10 + "s";
        document.body.appendChild(particle);
      }
    </script>
  </body>
</html>
