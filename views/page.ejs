    <div class="hero-section" id="hero">
      <div class="hero-info">
        <div class="hero-photo">
          <div class="image">
            <img src="/assets/FOTO 1.JPG" alt="" />
            <div class="square-img1"></div>
            <div class="square-img2"></div>
          </div>
        </div>
        <div class="hero-description">
          <div class="name">
            <h2>Hi, i'm Ilham.</h2>
            <div class="job"><h2>A Full Stack Web Developer.</h2></div>
          </div>
          <div class="tech-stack-float">
            <img
              src="/assets/tech-stack/icons8-express-js-480.png"
              alt=""
              class="express"
            />
            <img
              src="/assets/tech-stack/icons8-mysql-480.png"
