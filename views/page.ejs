    <div class="contact-me" id="contact">
      <div class="contact-container">
        <h2>Contact Me</h2>
        <div class="form">
          <form action="">
            <label for="">Email</label>
            <input type="text" placeholder="Your email" />

            <label for="">Name</label>
            <input type="text" placeholder="Your name" />

            <label for="">Subject</label>
            <input type="text" placeholder="Your subject" />

            <label for="">Message</label>
            <input type="text" placeholder="Your Message" />

            <input type="submit" value="Submit" />
          </form>
        </div>
        <div class="maps">
          <h2>Find Me Here <i class="bi bi-geo-alt-fill"></i></h2>
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d600.484703574029!2d111.85372015144105!3d-7.160479618788807!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e1!3m2!1sid!2sid!4v1745732972197!5m2!1sid!2sid"
            width="300"
            height="300"
            style="border: 0"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
          ></iframe>
        </div>
      </div>
    </div>

    <div class="footer-container">
      <div class="footer"><p>© 2025 Ahmad Ilham. All rights reserved.</p></div>
    </div>
    <script>
      const symbols = ["●", "■", "△", "✖"];
      const count = 120;

      for (let i = 0; i < count; i++) {
        const particle = document.createElement("div");
        particle.className = "particle";
        particle.innerText =
          symbols[Math.floor(Math.random() * symbols.length)];
        particle.style.left = Math.random() * 97 + "vw";
        particle.style.top = Math.random() * 500 + "vh";
        particle.style.fontSize = Math.random() * 16 + 8 + "px";
        particle.style.animationDuration = Math.random() * 5 + 10 + "s";
        document.body.appendChild(particle);
      }
    </script>
  </body>
</html>
